{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": false,
        "esModuleInterop": true,
        "lib": ["es6", "es7", "dom"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "baseUrl": ".",
        "paths": {
            "app/*": ["./src/app/*"]
        }
    }
}
